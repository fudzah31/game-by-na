<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Gradasi biru ke pink -->
    <gradient
        android:startColor="#B3E5FC"
        android:endColor="#CDDC39"
        android:angle="45" />

    <!-- Border lembut -->
    <stroke
        android:width="1dp"
        android:color="#90CAF9" />

    <!-- Sudut membulat -->
    <corners android:radius="16dp" />

    <!-- Padding dalam -->
    <padding
        android:left="12dp"
        android:top="8dp"
        android:right="12dp"
        android:bottom="8dp" />
</shape>
