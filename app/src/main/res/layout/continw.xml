<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#88FFFCFC"
    tools:context=".SettingActivity">

<androidx.cardview.widget.CardView
android:id="@+id/cardset"
android:layout_width="300dp"
android:layout_height="wrap_content"
android:layout_centerInParent="true"
cardview:cardCornerRadius="16dp"
cardview:cardElevation="8dp"
cardview:cardBackgroundColor="#FFFFFF"
cardview:cardUseCompatPadding="true"
android:layout_margin="16dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Header -->
    <TextView
        android:id="@+id/settext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/popup_header"
        android:gravity="center"
        android:text="PAUSE"
        android:textColor="#F4F1F1"
        android:textSize="20sp"
        android:fontFamily="sans-serif-medium" />

    <!-- Description -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="sans-serif"
        android:background="@drawable/edittx"
        android:text="Lanjut atau Berhenti?"
        android:textColor="#424242"
        android:textSize="16sp"
        tools:ignore="TouchTargetSizeCheck" />

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="#BDBDBD" />

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:gravity="end"
        android:weightSum="2">

        <Button
            android:id="@+id/btn_lanjut"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Lanjut"
            android:textAllCaps="false"
            android:backgroundTint="#3F51B5"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btn_stop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Berhenti"
            android:textAllCaps="false"
            android:backgroundTint="#FF4081"
            android:textColor="#FFFFFF" />
    </LinearLayout>

</LinearLayout>

</androidx.cardview.widget.CardView>

    </RelativeLayout>
