<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/background">

    <!-- Tombol home/pause -->
    <Button
        android:id="@+id/btn_pause"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-15dp"
        android:background="@drawable/home"
        android:contentDescription="Back" />

    <!-- Timer -->
    <TextView
        android:id="@+id/text_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@drawable/edittx"
        android:text="00:30"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <!-- Skor -->
    <TextView
        android:id="@+id/text_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@drawable/edittx"
        android:text="Score: 0"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <!-- Kartu soal (tengah layar) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/main_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="16dp">

            <!-- Soal Matematika (centered) -->
            <TextView
                android:id="@+id/text_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 Ã— 3 + 5 = ?"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:gravity="center" />

            <!-- Pilihan jawaban -->
            <GridLayout
                android:id="@+id/grid_options"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:columnCount="3"
                android:rowCount="1"
                android:alignmentMode="alignMargins"
                android:useDefaultMargins="true">

                <Button
                    android:id="@+id/btn_option_1"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_columnWeight="1"
                    android:text="11"
                    android:backgroundTint="#FFB6C1"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/btn_option_2"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_columnWeight="1"
                    android:backgroundTint="#ADD8E6"
                    android:text="7"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/btn_option_3"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_columnWeight="1"
                    android:backgroundTint="#FFB6C1"
                    android:text="12"
                    android:textSize="18sp" />
            </GridLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Tombol Cek Jawaban -->
    <Button
        android:id="@+id/btn_check"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="CEK"
        android:textAllCaps="false"
        android:backgroundTint="#60C864"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:layout_below="@id/main_card"
        android:layout_marginTop="16dp" />

</RelativeLayout>
